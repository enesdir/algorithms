{
  "name": "@algorithms/algorithms",
  "version": "0.0.0",
  "description": "Teaching people algorithms",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run test:live",
    "test": "jest --colors --coverage --verbose test",
    "test:live": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codenuru/algorithms.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "algorithms",
    "data-structures"
  ],
  "author": "codenuru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codenuru/algorithms/issues"
  },
  "homepage": "https://github.com/codenuru/algorithms#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "babel-jest": "^29.7.0",
    "@types/jest": "29.5.5",
    "@types/node": "20.7.1",
    "jest": "29.7.0",
    "typescript": "5.2.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$"
  }
}
